<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSetUpActivity">

    <include
        android:id="@+id/account_Toolbar"
        layout="@layout/app_bar_layout"

        ></include>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="397dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:background="@color/Card"
        android:fontFamily="Verdana"
        android:paddingTop="7dp"
        android:text="SET UP ACCOUNT"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="83dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="126dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="56dp">

        <ImageView
            android:id="@+id/ProfilePic"
            android:layout_width="131dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile" />


        <EditText
            android:id="@+id/txt_ClubName"
            android:layout_width="285dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:fontFamily="Verdana"
            android:hint="Enter Fullname"
            android:inputType="textPersonName"
            android:textColor="@color/Black"
            app:layout_constraintTop_toBottomOf="@+id/ProfilePic"
            tools:layout_editor_absoluteX="54dp" />

        <EditText
            android:id="@+id/etAccount_Book"
            android:layout_width="285dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:fontFamily="Verdana"
            android:hint="Enter Favourite Book Name"
            android:inputType="textPersonName"
            android:textColor="@color/Black"
            app:layout_constraintTop_toBottomOf="@+id/txt_ClubName"
            tools:layout_editor_absoluteX="54dp" />

        <EditText
            android:id="@+id/txt_ViewDate"
            android:layout_width="285dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:fontFamily="Verdana"
            android:hint="Enter Favourite Genre"
            android:inputType="textPersonName"
            android:textColor="@color/Black"
            app:layout_constraintTop_toBottomOf="@+id/txt_ClubName"
            tools:layout_editor_absoluteX="54dp" />

        <Button
            android:id="@+id/btn_SaveAccountDetails"
            android:layout_width="246dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@color/Button"
            android:fontFamily="Verdana"
            android:text="Save Details"
            android:textColor="@color/White"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/txt_ViewDate"
            tools:layout_editor_absoluteX="123dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>