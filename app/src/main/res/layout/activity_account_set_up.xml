<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSetUpActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="83dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="126dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ProfilePic"
            android:layout_width="165dp"
            android:layout_height="155dp"
            android:layout_gravity="center"
            android:layout_marginTop="88dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile" />

        <EditText
            android:id="@+id/etAccount_UserName"
            android:layout_width="285dp"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Enter Username"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/ProfilePic"
            tools:layout_editor_absoluteX="54dp" />

        <EditText
            android:id="@+id/etAccount_FullName"
            android:layout_gravity="center"
            android:layout_width="285dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter Full Name"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/etAccount_FullName"
            tools:layout_editor_absoluteX="54dp" />

        <EditText
            android:id="@+id/etAccount_Gender"
            android:layout_width="285dp"
            android:layout_gravity="center"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter Gender"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/etAccount_FullName"
            tools:layout_editor_absoluteX="54dp" />

        <Button
            android:id="@+id/btn_SaveAccountDetails"
            android:layout_width="151dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:text="Button"
            app:layout_constraintTop_toBottomOf="@+id/etAccount_Gender"
            tools:layout_editor_absoluteX="123dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>